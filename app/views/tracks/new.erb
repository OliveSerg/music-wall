<% if @track && @track.errors.any? %>
  <div>
    <strong>Some issues occurred when adding your song:</strong>
    <ul>
      <% @track.errors.full_messages.each do |track| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action="/tracks" method="post">
  <div>
    <label for="song_title">Song Title:</label>
    <input type="text" name="song_title" value="<%= @track && @track.song_title%>">
  </div>
  <div>
    <label for="author">Artist:</label>
    <input type="text" name="author" value="<%= @track && @track.author%>">
  </div>
  <div>
    <label for="url">Url:</label>
    <input type="text" name="url" value="<%= @track && @track.url%>" placeholder="If Applicable">
  </div>
</form>
